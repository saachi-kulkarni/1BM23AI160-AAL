#include<stdio.h>
#include <stdlib.h>
#include <string.h>
int patternmatch(int m,int n,char P[100],char S[100]){
int i,j;
for(i=0;i<=n-m;i++){
j=0;
while (j<m && P[j]==S[i+j]){
j=j+1;
}
if (j==m){
return i;}

}
return -1;

}
int main(){
int n,m,x;
char S[100],P[100];
printf(" Enter the String");
gets(S);

printf("\n Enter the Pattern");
gets(P);

n=strlen(S);
m=strlen(P);
x=patternmatch(m,n,P,S);
if(x==-1){
printf(" Pattern not found");
}
else{
printf("\n The pattern found in %dth position of the string",x);
}
}
